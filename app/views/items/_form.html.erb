<%=form_for @item, :remote => true, :url => {:action => :create}, :before => "jQuery('#creating_events').show();", :complete => "jQuery('#creating_events').hide();" do |f| %>
<p>
  <%=f.label :title %>
  <br/>
  <%=f.text_field :title %>
</p>
<p>
  <%=f.label :description %>
  <br/>
  <%=f.text_area :description, :rows => 4, :cols => 30 %>
</p>
<p>
  <%=f.label :start_date, 'Start Time' %>
  <br/>
  <%=f.datetime_select :end_date %>
</p>
<p>
  <%=f.label :start_date, 'End Time' %>
  <br/>
  <%=f.datetime_select :end_date %>
</p>
<%=f.hidden_field :id, :value => @item.id %>
<p>
  <%=f.submit 'Create' %> <span id = "creating_events" style = "display:none;">Creating, Please wait...</span>
</p>
<%end %>